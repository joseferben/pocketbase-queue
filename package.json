{
  "name": "pocketbase-queue",
  "version": "0.0.3",
  "description": "A type-safe queue for background tasks on top of PocketBase.",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json --noEmit && tsup",
    "dev": "tsx --watch test/index.ts",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "changeset": "changeset",
    "publish": "changeset version && changeset publish"
  },
  "author": "Josef Erben",
  "license": "MIT",
  "peerDependencies": {
    "pocketbase": "^0.21.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}
